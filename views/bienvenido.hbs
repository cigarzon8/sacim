
{{> header}}


<!-- contact section -->
<section class="contact_section layout_padding position-relative">
    <div class="custom_heading-container">
        <h3>Bienvenido</h3>
    </div>

    <!-- Card en la esquina superior derecha -->
    <div class="position-absolute top-0 end-0 p-3" style="z-index:10;">
        <div class="card shadow-lg border-0 rounded-3" style="min-width:180px;">
            <div class="card-body text-center">
                <p class="mb-2"><strong>Vacías:</strong> {{vacias}}</p>
                <p class="mb-0"><strong>Ocupadas:</strong> {{Ocupadas}}</p>
            </div>
        </div>
    </div>

    <div class="container layout_padding2-top">
        <div class="row">
            <form method="GET" action="/vehiculo">
                <p>
                    <strong>🔍 Placa: </Strong>
                    <input type="text" value="" name="placa">
                    <div class="d-flex justify-content-center ">
                        <button class="btn btn-primary"  type="submit" value="Buscar">Buscar</button> 
                    </div>
                </p>
            </form>
        </div>
    </div>
</section>


