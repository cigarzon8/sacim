{{> layout}}
{{> header}}
{{> nav}}
<div class="container-xx3">
<a href="/{{base}}/add"><td><button class="btn btn-primary">Agregar</button></td></a>

<table class="table">
  <thead>
    <tr>
    {{#each headerlist}}
        <th scope="row">{{this}}</th>
    {{/each}}
    </tr>
  </thead>
  <tbody>
    {{#each datalist}}
        <tr>
        <td>{{this.id}}</td>
        <td>{{this.estado}}</td>
        <td>{{this.placa}}</td>
        <td>{{this.tipovehiculo}}</td>
        <td>
          <a href="/{{base}}/remove/{{this.id}}">
            <button class="btn btn-danger">Delete</button>
          </a>
        </td>
        </tr>
    {{/each}}

  </tbody>
</table>

</div>

{{> footer}}