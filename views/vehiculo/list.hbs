{{> layout}}
{{> header}}
{{> nav}}

<!-- contact section -->

<section class="contact_section layout_padding">
    <div class="custom_heading-container">
        <h3 class=" ">
            Vehiculos 
        </h3>
    </div>
    
    <div class="container text-center my-3">
        <a class="btn btn-primary" href="/vehiculo/add">
            Agregar <i class="fa-solid fa-plus ms-2"></i>
        </a>
    </div>

    <div class="container layout_padding2-top">
        <div class="row">
            <div class="col-md-6 mx-auto">

              <table class="table">
                <thead>
                  <tr>
                  {{#each headerlist}}
                      <th scope="row">{{this}}</th>
                  {{/each}}
                  </tr>
                </thead>
                <tbody>
                  {{#each datalist}}
                      <tr>
                      <td>{{this.id_vehiculo}}</td>
                      <td>{{this.estado}}</td>
                      <td>{{this.placa}}</td>
                      <td>{{this.tipovehiculo}}</td>
                      <td>
                        <a href="/cobros/add/{{this.id_proyecto}}/{{id_vehiculo}}">
                          <button class="btn btn-success">Inicio parqueo</button>
                        </a>        
                        </td>
                      </tr>
                  {{/each}}

                </tbody>
              </table>



            </div>
        </div>

    </div>


</section>



{{> footer}}