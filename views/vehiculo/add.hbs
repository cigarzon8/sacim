{{> layout}}
{{> nav}}
<div class="container-xx3">
<a href="/vehiculo">List</a>

<form  id="useradd" action="/vehiculo/add" method="post" class="needs-validation was-validated" novalidate>

  <div class="form-group">

    <div class="form-group">
        <label for="input-datalist">Usuario</label>
        <input type="text" class="form-control" placeholder="Usuario" list="list-Usuario" name="idusuario" id="idusuario" placeholder="Seleccione usuario" required value="{{data.idusuario}}">
        <datalist id="list-Usuario">
            {{#each userdata}}
                <option>{{this.nombres}} - {{this.id}}</option>
            {{/each}}
        </datalist>
        <div class="valid-feedback">
        ok!
        </div>
        <div class="invalid-feedback">
        Seleccione un nombre.
        </div>
    </div>


    <label for="placa">Placa</label>
    <input type="text" class="form-control" name="placa" id="placa" placeholder="placa" autocomplete="off" required value="{{data.placa}}">

  </div>

    <div class="form-group">
        <label for="input-datalist">Tipo de vehiculo</label>
        <input type="text" class="form-control" placeholder="Tipo de vehiculo" list="list-tipovehiculo" name="tipovehiculo" id="tipovehiculo" placeholder="Seleccione tipo" required value="{{data.tipovehiculo}}">
        <datalist id="list-tipovehiculo">
            {{#each estadoData}}
                <option>{{this.NombreEstado}} - {{this.id}}</option>
            {{/each}}
        </datalist>
        <div class="valid-feedback">
        ok!
        </div>
        <div class="invalid-feedback">
        Seleccione un nombre.
        </div>
    </div>

    <diV>
        <a>
            <button class="btn btn-primary"  type="submit" value="Ingresar" id="ingresar">Crear</button>
        </a>
    </diV>

</form>

</div>

{{> footer}}